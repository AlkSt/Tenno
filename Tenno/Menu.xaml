<Window x:Class="Tenno.Menu" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tenno"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Menu" Height="150" Width="150" Background="LightPink" FontFamily="Segoe UI Black" WindowStyle="None" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Width="100" Height="30" Content="Открыть правила" Click="RegButton_Click" Background="#FFFFDDEE" FontSize="10" />
        <Button Grid.Row="1" Width="100" Height="30" Content="Играть" Click="PlayButton_Click1"  Background="#FFFFDDEE" Margin="21,5,21,0" VerticalAlignment="Top" FontSize="10"/>
        <Button Grid.Row="2" Width="100" Height="30" Content="Выход" Click="CloseButton_Click2"  Background="#FFFFDDEE" FontSize="10" />
    </Grid>
</Window>
